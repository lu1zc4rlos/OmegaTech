<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkPurple">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/btnVoltarDetalhe"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/text_white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvHeaderTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket #..."
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvDetalheStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDENTE"
                    android:background="@drawable/bg_badge"
                    android:textColor="@color/text_white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvDetalhePrioridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALTA"
                    android:background="@drawable/bg_badge"
                    android:textColor="#FF6B6B"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvDetalheTituloFull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Título"
                        android:textColor="@color/text_white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvDetalheDescricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descrição..."
                        android:textColor="@color/text_gray"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDetalheData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data"
                            android:textColor="@color/text_gray"
                            android:textSize="13sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDetalheTecnico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Técnico"
                            android:textColor="@color/text_gray"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRespostaTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#232336"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resposta do Técnico"
                        android:textColor="@color/primary_purple"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvTextoResposta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="@color/text_white"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInputResposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/sym_action_chat"
                            app:tint="@color/text_white"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:text="Enviar Resposta"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtRespostaTecnico"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/bg_card_dashboard"
                        android:backgroundTint="#1E1E2E"
                        android:hint="Descreva a solução..."
                        android:textColorHint="#707080"
                        android:textColor="@color/text_white"
                        android:padding="12dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"/>

                    <Button
                        android:id="@+id/btnConcluirChamado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:text="Concluir Chamado"
                        android:textColor="@color/text_white"
                        android:backgroundTint="@color/primary_purple"
                        app:cornerRadius="8dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconTint="@color/text_white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAtenderTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="ATENDER CHAMADO"
        android:textColor="@android:color/white"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/primary_purple"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExcluirTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_menu_delete"
        app:tint="@color/DarkPurple"
        app:backgroundTint="@color/LightPurple"
        android:visibility="gone"/>

</RelativeLayout>