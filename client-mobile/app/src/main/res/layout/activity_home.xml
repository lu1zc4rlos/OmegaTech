<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkPurple">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_container"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="OmegaTech"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Gerencie seus tickets de suporte"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="@color/primary_purple">
                    <TextView
                        android:text="PC"
                        android:textSize="18sp"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card_dashboard"
                        android:padding="16dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:src="@android:drawable/ic_menu_view"
                            app:tint="@color/primary_purple"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:text="Total"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="5"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card_dashboard"
                        android:padding="16dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:src="@android:drawable/ic_menu_recent_history"
                            app:tint="#FFC107"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:text="Abertos"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card_dashboard"
                        android:padding="16dp">

                        <ImageView
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="#FF5722"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:text="Em Atend."
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:text="Tickets Recentes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Ver Todos"
                    android:textColor="@color/primary_purple"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerListaTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_dashboard"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:text="Erro ao acessar o painel"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Alta"
                            android:textSize="12sp"
                            android:textColor="#FF6B6B"
                            android:background="@drawable/bg_badge_status"
                            android:backgroundTint="#4A2626"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:text="Estou recebendo um erro 404 ao tentar acessar meu painel..."
                        android:textColor="@color/text_gray"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="Em Atendimento"
                            android:textSize="12sp"
                            android:textColor="#FFC107"
                            android:background="@drawable/bg_badge_status"
                            android:backgroundTint="#3E3320"
                            android:layout_marginEnd="10dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Técnico"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="há 2h"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/card_bg"
        app:itemIconTint="@color/text_gray"
        app:itemTextColor="@color/text_gray"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>