<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkPurple">

    <LinearLayout
        android:id="@+id/headerHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_gradient"
        android:layout_marginBottom="20dp"
        android:paddingStart="24dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="OmegaTech"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Gerencie seus chamados"
                    android:textSize="15sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/btnPerfilUsuario"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_avatar_circle">

                <TextView
                    android:id="@+id/tvIniciaisUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="US"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>



    <HorizontalScrollView
        android:id="@+id/scrollFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerHome"
        android:scrollbars="none"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cardFilterTotal"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_dashboard"
                android:padding="16dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="#448AFF"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="#26344A"
                    android:padding="6dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:text="Total"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCountTotal"
                    android:text="-"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardFilterAberto"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_dashboard"
                android:padding="16dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#FFC107"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="#3E3320"
                    android:padding="6dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:text="Abertos"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCountAberto"
                    android:text="-"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardFilterAndamento"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_dashboard"
                android:padding="16dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#FF5722"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="#4A2626"
                    android:padding="6dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:text="Em Atend."
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCountAndamento"
                    android:text="-"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardFilterConcluido"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_dashboard"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:src="@android:drawable/ic_input_add"
                    app:tint="#2ED573"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="#253529"
                    android:padding="6dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:text="Resolvidos"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCountConcluido"
                    android:text="-"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHomeTickets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollFiltros"
        android:layout_above="@id/bottomNav"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"/>

    <ProgressBar
        android:id="@+id/progressBarHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@color/primary_purple"/>

    <TextView
        android:id="@+id/tvSemTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum ticket encontrado."
        android:textColor="@color/text_gray"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Purple"
        app:itemIconTint="@color/text_gray"
        app:itemTextColor="@color/text_gray"
        app:menu="@menu/bottom_nav_menu"/>

</RelativeLayout>